<Window x:Class="Wpf_Budgetplanerare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Budgetplanerare - Start"
        Height="450"
        Width="800"
        Background="{StaticResource PrimaryBrush}">

    <Grid>
        <Border Background="{StaticResource SecondaryBrush}"
                CornerRadius="12"
                Padding="20"
                Width="700"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Select existing -->
                <StackPanel Margin="10">
                    <TextBlock Text="Select user"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <ComboBox x:Name="UsersComboBox"
                      Width="240"
                      MinHeight="32"
                      Margin="0,0,0,6"
                      DisplayMemberPath="FirstName"
                      MaxDropDownHeight="220"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">

                        <!-- Fixar hur varje rad i dropdownen ser ut -->
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="MinHeight" Value="32"/>
                                <Setter Property="Padding" Value="8,2"/>
                                <Setter Property="VerticalContentAlignment" Value="Center"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>

                    </ComboBox>

                    <Button Content="Continue"
                            Margin="0,10,0,0"
                            Click="Continue_Click"/>
                </StackPanel>

                <!-- Create new -->
                <StackPanel Grid.Column="1" Margin="10">
                    <TextBlock Text="Create new user"
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="0,0,0,10"/>

                    <TextBlock Text="First name"/>
                    <TextBox x:Name="FirstNameBox"
                             Style="{x:Null}"
                             MinHeight="32"
                             Padding="6,4"
                             VerticalContentAlignment="Center"
                             Background="White"
                             Foreground="Black"
                             IsEnabled="True"
                             IsHitTestVisible="True"
                             Focusable="True"/>

                    <TextBlock Text="Last name"/>
                    <TextBox x:Name="LastNameBox"
                             Style="{x:Null}"
                             MinHeight="32"
                             Padding="6,4"
                             VerticalContentAlignment="Center"
                             Background="White"
                             Foreground="Black"
                             IsEnabled="True"
                             IsHitTestVisible="True"
                             Focusable="True"/>

                    <TextBlock Text="Income monthly"/>
                    <TextBox x:Name="IncomeBox"
                             Style="{x:Null}"
                             MinHeight="32"
                             Padding="6,4"
                             VerticalContentAlignment="Center"
                             Background="White"
                             Foreground="Black"
                             IsEnabled="True"
                             IsHitTestVisible="True"
                             Focusable="True"/>

                    <TextBlock Text="Work hours monthly"/>
                    <TextBox x:Name="HoursBox"
                             Style="{x:Null}"
                             MinHeight="32"
                             Padding="6,4"
                             VerticalContentAlignment="Center"
                             Background="White"
                             Foreground="Black"
                             IsEnabled="True"
                             IsHitTestVisible="True"
                             Focusable="True"/>

                    <Button Content="Create &amp; Continue"
                            Margin="0,10,0,0"
                            Click="Create_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
