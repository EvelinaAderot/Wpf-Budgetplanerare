<UserControl x:Class="Wpf_Budgetplanerare.Views.TransactionsTableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Border Padding="10"
            Background="White"
            BorderBrush="#DDD"
            BorderThickness="1"
            CornerRadius="8"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">

        <DataGrid ItemsSource="{Binding Transactions}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">

            <DataGrid.Columns>

                <!-- Category -->
                <DataGridTextColumn Header="Category"
                                    Binding="{Binding CategoryName}"
                                    Width="*"/>

                <!-- Type -->
                <DataGridTextColumn Header="Type"
                                    Binding="{Binding ItemType}"
                                    Width="100"/>

                <!-- Date -->
                <DataGridTextColumn Header="Date"
                                    Binding="{Binding TransactionDate, StringFormat=yyyy-MM-dd}"
                                    Width="120"/>

                <!-- Amount -->
                <DataGridTextColumn Header="Amount"
                                    Binding="{Binding Amount, StringFormat={}{0:N2} kr}"
                                    Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right"/>
                            <Setter Property="Padding" Value="0,0,20,0"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Note button (NO converter) -->
                <DataGridTemplateColumn Header="Note" Width="70">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="📄"
                                    FontSize="14"
                                    ToolTip="Show note"
                                    Padding="8,2"
                                    BorderThickness="0"
                                    Foreground="White"
                                    Click="NoteButton_Click">

                                <Button.Style>
                                    <Style TargetType="Button">
                                        <!-- DEFAULT: green + enabled -->
                                        <Setter Property="Background" Value="#2E7D32"/>
                                        <Setter Property="IsEnabled" Value="True"/>
                                        <Setter Property="Cursor" Value="Hand"/>

                                        <Style.Triggers>
                                            <!-- If Note is null -> gray + disabled -->
                                            <DataTrigger Binding="{Binding Note}" Value="{x:Null}">
                                                <Setter Property="Background" Value="#9E9E9E"/>
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="Cursor" Value="Arrow"/>
                                            </DataTrigger>

                                            <!-- If Note is empty -> gray + disabled -->
                                            <DataTrigger Binding="{Binding Note}" Value="">
                                                <Setter Property="Background" Value="#9E9E9E"/>
                                                <Setter Property="IsEnabled" Value="False"/>
                                                <Setter Property="Cursor" Value="Arrow"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>

                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

    </Border>
</UserControl>
