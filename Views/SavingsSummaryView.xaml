<UserControl x:Class="Wpf_Budgetplanerare.Views.SavingsSummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="104">

    <Border Padding="10"
            CornerRadius="8"
            Background="White"
            BorderBrush="#DDD"
            BorderThickness="1"
            Margin="0,0,0,20">

        <StackPanel>

            <!-- Title -->
            <TextBlock Text="Savings added"
                       FontSize="10"
                       FontWeight="SemiBold"
                       Opacity="0.75"
                       Margin="0,0,0,3"/>

            <!-- Spread across full width -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Last month -->
                <StackPanel Grid.Column="0"
                            Orientation="Vertical"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Last month"
                               Opacity="0.7"
                               FontSize="10"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding SavingsLastMonth, Mode=OneWay, StringFormat={}{0:N2} kr}"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Last quarter -->
                <StackPanel Grid.Column="1"
                            Orientation="Vertical"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Last quarter"
                               Opacity="0.7"
                               FontSize="10"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding SavingsLastQuarter, Mode=OneWay, StringFormat={}{0:N2} kr}"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Last year -->
                <StackPanel Grid.Column="2"
                            Orientation="Vertical"
                            HorizontalAlignment="Center">
                    <TextBlock Text="Last year"
                               Opacity="0.7"
                               FontSize="10"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding SavingsLastYear, Mode=OneWay, StringFormat={}{0:N2} kr}"
                               FontWeight="SemiBold"
                               HorizontalAlignment="Center"/>
                </StackPanel>

            </Grid>

        </StackPanel>
    </Border>
</UserControl>
