<!-- ff — BudgetProgressView.xaml -->
<UserControl x:Class="Wpf_Budgetplanerare.Views.BudgetProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>

        <Style x:Key="SmallLabel" TargetType="TextBlock">
            <Setter Property="Opacity" Value="0.75"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="SpentOrAddedLabel"
               TargetType="TextBlock"
               BasedOn="{StaticResource SmallLabel}">
            <Setter Property="Text" Value="Spent"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding CategoryTypeText}" Value="Savings">
                    <Setter Property="Text" Value="Added"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <Border Padding="12"
            CornerRadius="8"
            Background="White"
            BorderBrush="#DDD"
            BorderThickness="1">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- NAV -->
            <StackPanel Grid.Column="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        Margin="0,0,12,0">
                <Button Content="◀"
                        Width="26"
                        Height="26"
                        Command="{Binding PrevCommand}"
                        Margin="0,0,6,0"/>
                <Button Content="▶"
                        Width="26"
                        Height="26"
                        Command="{Binding NextCommand}"/>
            </StackPanel>

            <!-- HEADER -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center">
                <TextBlock Text="{Binding HeaderText}"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <TextBlock Text="{Binding PeriodText}"
                           FontSize="12"
                           Opacity="0.75"/>
            </StackPanel>

            <!-- CATEGORY -->
            <StackPanel Grid.Column="2"
                        VerticalAlignment="Center">
                <TextBlock Text="{Binding CategoryName}"
                           FontSize="14"
                           FontWeight="SemiBold"/>
                <TextBlock Text="{Binding CategoryTypeText}"
                           FontSize="12"
                           Opacity="0.7"/>
            </StackPanel>

            <!-- PROGRESS -->
            <Grid Grid.Column="3"
                  Margin="12,0,0,0"
                  VerticalAlignment="Center">

                <Border Background="#EEEEEE"
                        CornerRadius="8"
                        Height="66"
                        VerticalAlignment="Center"/>

                <Border Background="{Binding ProgressBrush}"
                        CornerRadius="8"
                        Height="66"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        RenderTransformOrigin="0,0.5">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="{Binding ProgressRatio}"
                                        ScaleY="1"/>
                    </Border.RenderTransform>
                </Border>

                <!-- TEXT ROW -->
                <Grid Margin="12,0"
                      VerticalAlignment="Center">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Budget -->
                    <TextBlock Text="Budget"
                               Style="{StaticResource SmallLabel}"/>
                    <TextBlock Grid.Column="1"
                               Text="{Binding BudgetText}"
                               Style="{StaticResource ValueText}"
                               Margin="6,0,16,0"/>

                    <!-- Spent / Added -->
                    <TextBlock Grid.Column="2"
                               Style="{StaticResource SpentOrAddedLabel}"/>
                    <TextBlock Grid.Column="3"
                               Text="{Binding SpentText}"
                               Style="{StaticResource ValueText}"
                               Margin="6,0,16,0"/>

                    <!-- Remaining (FIXED) -->
                    <TextBlock Grid.Column="4"
                               Text="Remaining"
                               Style="{StaticResource SmallLabel}"/>
                    <TextBlock Grid.Column="5"
                               Text="{Binding RemainingText}"
                               FontSize="13"
                               FontWeight="SemiBold"
                               Foreground="{Binding RemainingBrush}"
                               VerticalAlignment="Center"
                               Margin="6,0,0,0"/>
                </Grid>

            </Grid>
        </Grid>
    </Border>
</UserControl>
