<UserControl x:Class="Wpf_Budgetplanerare.Views.IncomeBudgetView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- FIX: SharedSizeScope makes all value/input columns the same width -->
    <Grid Margin="10" Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Income"
                           FontSize="16"
                           FontWeight="Bold"/>

                <TextBlock Text="{Binding CurrentMonthText}"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Opacity="0.85"
                           Margin="0,2,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                    <TextBlock Text="Month:" Opacity="0.7" VerticalAlignment="Center"/>
                    <DatePicker SelectedDate="{Binding SelectedMonth}"
                                Margin="8,0,0,0"
                                Width="140"/>
                </StackPanel>

                <TextBlock Text="categories (fill income per category)"
                           Opacity="0.7"
                           FontSize="12"
                           Margin="0,6,0,0"
                           Width="249"/>
            </StackPanel>

            <!-- Pen icon: edit/save -->
            <Button Grid.Column="1"
                    Width="34"
                    Height="34"
                    Content="✎"
                    Command="{Binding ToggleEditCommand}"
                    VerticalAlignment="Top"
                    ToolTip="Edit / Save"/>
        </Grid>

        <!-- MAIN CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- List -->
                <ItemsControl ItemsSource="{Binding IncomeCategories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,8"
                                    Padding="10"
                                    CornerRadius="8"
                                    Background="White"
                                    BorderBrush="#DDD"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <!-- FIX: shared size group so this value/input column matches budget inputs -->
                                            <ColumnDefinition Width="Auto" SharedSizeGroup="ValueCol"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,12,0"/>

                                        <!-- Amount: Display vs Edit -->
                                        <Grid Grid.Column="1" MinWidth="120" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding Amount, StringFormat={}{0:N2} kr}"
                                                       HorizontalAlignment="Right"
                                                       VerticalAlignment="Center">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                         Value="True">
                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                                                     HorizontalContentAlignment="Right"
                                                     VerticalContentAlignment="Center"
                                                     MinHeight="26"
                                                     MinWidth="120">
                                                <TextBox.Style>
                                                    <Style TargetType="TextBox">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                         Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBox.Style>
                                            </TextBox>
                                        </Grid>
                                    </Grid>

                                    <!-- Repeat-until (ONLY when editing) -->
                                    <StackPanel Grid.Row="1"
                                                Orientation="Horizontal"
                                                Margin="0,8,0,0">
                                        <StackPanel.Style>
                                            <Style TargetType="StackPanel">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.IsEditMode, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                 Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </StackPanel.Style>

                                        <TextBlock Text="Repeat until:"
                                                   Opacity="0.7"
                                                   VerticalAlignment="Center"/>

                                        <DatePicker SelectedDate="{Binding EndMonth}"
                                                    Margin="8,0,0,0"
                                                    Width="140"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- DISTRIBUTION (Total income -> Monthly / Quarter / Year) -->
                <Border Margin="0,10,0,0"
                        Padding="12"
                        CornerRadius="8"
                        Background="White"
                        BorderBrush="#DDD"
                        BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Distribute total income"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>

                        <Grid Grid.Row="1" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <!-- FIX: shared size group -->
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ValueCol"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Total income"
                                       Opacity="0.75"
                                       VerticalAlignment="Center"/>

                            <TextBlock Grid.Column="1"
                                       Text="{Binding TotalIncome, StringFormat={}{0:N2} kr}"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontWeight="SemiBold"
                                       MinWidth="120"/>
                        </Grid>

                        <!-- Monthly bucket -->
                        <Grid Grid.Row="2" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <!-- FIX: shared size group -->
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ValueCol"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Monthly budget"
                                       Opacity="0.75"
                                       VerticalAlignment="Center"/>

                            <Grid Grid.Column="1" MinWidth="120" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding MonthlyBudgetAllocation, StringFormat={}{0:N2} kr}"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBox Text="{Binding MonthlyBudgetAllocation, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalContentAlignment="Right"
                                         VerticalContentAlignment="Center"
                                         MinHeight="26"
                                         MinWidth="120">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Grid>
                        </Grid>

                        <!-- Quarter bucket -->
                        <Grid Grid.Row="3" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <!-- FIX: shared size group -->
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ValueCol"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Quarter budget"
                                       Opacity="0.75"
                                       VerticalAlignment="Center"/>

                            <Grid Grid.Column="1" MinWidth="120" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding QuarterBudgetAllocation, StringFormat={}{0:N2} kr}"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBox Text="{Binding QuarterBudgetAllocation, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalContentAlignment="Right"
                                         VerticalContentAlignment="Center"
                                         MinHeight="26"
                                         MinWidth="120">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Grid>
                        </Grid>

                        <!-- Year bucket -->
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <!-- FIX: shared size group -->
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ValueCol"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Year budget"
                                       Opacity="0.75"
                                       VerticalAlignment="Center"/>

                            <Grid Grid.Column="1" MinWidth="120" HorizontalAlignment="Right">
                                <TextBlock Text="{Binding YearBudgetAllocation, StringFormat={}{0:N2} kr}"
                                           HorizontalAlignment="Right"
                                           VerticalAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Visibility" Value="Visible"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <TextBox Text="{Binding YearBudgetAllocation, UpdateSourceTrigger=PropertyChanged}"
                                         HorizontalContentAlignment="Right"
                                         VerticalContentAlignment="Center"
                                         MinHeight="26"
                                         MinWidth="120">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsEditMode}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>
                            </Grid>
                        </Grid>

                    </Grid>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Bottom: Remaining -->
        <Border Grid.Row="2"
                Margin="0,10,20,0"
                Padding="12"
                CornerRadius="8"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <!-- FIX: shared size group -->
                    <ColumnDefinition Width="Auto" SharedSizeGroup="ValueCol"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Remaining"
                           FontSize="13"
                           FontWeight="SemiBold"
                           Opacity="0.85"
                           VerticalAlignment="Center"
                           Margin="0,0,12,0"/>

                <TextBlock Grid.Column="1"
                           Text="{Binding RemainingTotal, StringFormat={}{0:N2} kr}"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"
                           FontSize="13"
                           FontWeight="SemiBold"
                           MinWidth="120"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>
